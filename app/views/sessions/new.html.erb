<%= form_with(scope: :session, url: login_path, local: true) do |f| %>

  <div>
    <%= f.label :email %></br>
    <%= f.email_field :email, placeholder: "Enter your email address" %>
  </div>

  <div>
    <%= f.label :password %></br>
    <%= f.password_field :password, placeholder: "Choose your password" %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>