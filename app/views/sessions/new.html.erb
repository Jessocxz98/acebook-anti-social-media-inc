<%= form_with(scope: :session, url: login_path, local: true) do |f| %>

  <div>
    <%= f.label :email, class: "form-label mt-3" %></br>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
  </div>

  <div>
    <%= f.label :password, class: "form-label mt-3" %></br>
    <%= f.password_field :password, class: "form-control", placeholder: "Choose your password" %>
  </div>

  <div>
    <%= f.submit "Log in", class: 'btn btn-primary mt-3' %>
  </div>

<% end %>