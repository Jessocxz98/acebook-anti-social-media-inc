<h1 class="text-center mb-4">Edit post</h1>

<div>
  <% if @post.image.attached? %>
    <%= image_tag @post.image, class: "img-fluid" %>
  <% end %>
  <%= @post.message %>
</div>

<%= render 'posts/newpost' %>

<div class="text-center edit-links">
  <%= button_to "Delete Post", post_path(@post), class:"btn btn-light", method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
  <%= link_to "Cancel", :back, class: "mt-2" %>
</div>
